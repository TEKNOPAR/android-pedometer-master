<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
				android:angle="270"
				android:startColor="@color/actionbar_color"
				android:endColor="@color/actionbar_color" />
            <corners android:radius="@dimen/s2" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
             <gradient
				android:angle="90"
                android:startColor="@color/actionbar_color"
                android:endColor="@color/actionbar_color" />
            <corners android:radius="@dimen/s2" />
         </shape>
	</item>
</selector>