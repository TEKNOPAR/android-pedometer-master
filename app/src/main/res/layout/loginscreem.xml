<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity"
    android:background="@drawable/login_pattern">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <info.hoang8f.widget.FButton
            android:id="@+id/btnGooglePlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:drawableLeft="@drawable/icon_googleplus"
            android:drawablePadding="0dp"
            android:minHeight="50dp"
            android:minWidth="350dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingTop="-5dp"
            android:text="Google Plus ile Giriş Yap"
            android:textColor="@android:color/white"
            fbutton:cornerRadius="15dp"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="6dp"
            fbutton:buttonColor="@color/fbutton_color_pomegranate"
            />


        <info.hoang8f.widget.FButton
            android:id="@+id/btnFacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:drawableLeft="@drawable/icon_facebook"
            android:drawablePadding="0dp"
            android:minHeight="50dp"
            android:minWidth="350dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingTop="-5dp"
            android:text="Facebook ile Giriş Yap"
            android:textColor="@android:color/white"
            fbutton:cornerRadius="15dp"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="6dp"
            fbutton:buttonColor="@color/fbutton_color_peter_river"
            />


        <info.hoang8f.widget.FButton
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:drawableLeft="@drawable/icon_mail"
            android:drawablePadding="0dp"
            android:minHeight="50dp"
            android:minWidth="350dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingTop="-5dp"
            android:text="E-posta ile Giriş Yap"
            android:textColor="@android:color/white"
            fbutton:cornerRadius="15dp"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="6dp"
            fbutton:buttonColor="@color/fbutton_color_green_sea"
            />





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ya da"
            android:id="@+id/textView7"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"/>



        <info.hoang8f.widget.FButton
            android:id="@+id/btnSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:drawableLeft="@drawable/icon_kayitol"
            android:drawablePadding="0dp"
            android:minHeight="50dp"
            android:minWidth="350dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingTop="-5dp"
            android:text="Kayıt Ol"
            android:textColor="@android:color/white"
            fbutton:cornerRadius="15dp"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="6dp"
            fbutton:buttonColor="@color/fbutton_color_sun_flower"/>


    </LinearLayout>





</RelativeLayout>